<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.codenicely.services.feelbazaar.vendorapp.course_list.view.CourseListFragment"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_course1"
        android:layout_width="match_parent"
        app:contentPadding="@dimen/padding_16dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textSize="@dimen/text_size_20sp"
            android:text="@string/demo_course" />

    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrayLine"/>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_course2"
        android:layout_width="match_parent"
        app:contentPadding="@dimen/padding_16dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textSize="@dimen/text_size_20sp"
            android:text="@string/demo_course2" />

    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrayLine"/>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_course3"
        android:layout_width="match_parent"
        app:contentPadding="@dimen/padding_16dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textSize="@dimen/text_size_20sp"
            android:text="@string/demo_course3" />

    </android.support.v7.widget.CardView>

</LinearLayout>